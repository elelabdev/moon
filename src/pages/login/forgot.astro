---
import "../../styles/global.css";
---
<html lang="en" class="h-full" data-theme="light">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Forgot Password â€” MOON</title>
    <link rel="icon" type="image/png" href="/favicon.png" />
    <script is:inline>
      (function(){
        try {
          const stored = localStorage.getItem('theme');
          const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
          const t = stored || (prefersDark ? 'dark' : 'light');
          const root = document.documentElement;
          root.setAttribute('data-theme', t);
          if (t === 'dark') root.classList.add('dark'); else root.classList.remove('dark');
        } catch(e){}
      })();
    </script>
  </head>
  <body class="h-full">
    <div class="relative flex min-h-screen w-screen items-center justify-center bg-fixed bg-center bg-cover bg-no-repeat" style="background-image: url('/assets/login/bg.png');">
      <div class="w-96 h-96 rounded-lg border border-base-200 bg-base-100 bg-opacity-90 dark:bg-base-200 dark:bg-opacity-90 p-6 shadow-lg backdrop-blur">
        <div class="mb-5 flex flex-col items-center">
          <img src="/assets/brand/logo-light.svg" alt="MOON" class="logo-light h-[2.5rem]" />
          <img src="/assets/brand/logo-dark.svg" alt="MOON" class="logo-dark h-[2.5rem]" />
          <h1 class="mt-3 text-lg font-semibold tracking-tight">Self-Service Customer Portal</h1>
        </div>

        <form id="forgotForm">
          <div class="space-y-3">
            <p class="text-sm text-slate-600">Enter your email to receive a password reset link.</p>
            <label class="block">
              <span class="mb-1 block text-sm text-slate-600">Email</span>
              <input name="email" type="email" required class="input input-bordered w-full rounded-lg" />
            </label>
          </div>
          <div class="mt-5 flex items-center gap-5">
            <a href="/login" class="btn btn-outline flex-1 rounded-lg">Back</a>
            <button type="submit" class="btn flex-1 rounded-lg">Send reset link</button>
          </div>
        </form>
      </div>
    </div>

    <script is:inline>
      document.getElementById('forgotForm')?.addEventListener('submit', (e) => {
        e.preventDefault();
        // In a production environment, submit to backend. For now, go back to login page
        window.location.href = '/login';
      });
    </script>
  </body>
</html>
