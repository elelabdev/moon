<html lang="en" class="h-full" data-theme="light">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="icon" type="image/png" href="/favicon.png" />
  </head>
  <body class="h-full bg-base-100 text-base-content">
    <Sidebar activePath={activePath} />

    <main class="content-col fixed left-[var(--sidebar-w)] right-0 top-0 bottom-0 flex flex-col transition-[left] duration-200">
      <div class="px-4 lg:px-8">
        <Header />
        <TopNotice />
      </div>
      <div class="flex-1 overflow-y-auto">
        <div class="mx-auto max-w-6xl px-4 lg:px-8 py-8">
          <div class="mb-6 flex items-start justify-between gap-3">
            <div>
              <h1 class="text-2xl font-semibold">{title}</h1>
              <p class="text-sm opacity-70">{subtitle}</p>
            </div>
            {backHref ? (
              <a href={backHref} onclick="history.back(); return false;" class="btn btn-outline rounded-lg px-3 py-1.5 text-sm">Back</a>
            ) : (
              <a href="#" class="btn btn-outline rounded-lg px-3 py-1.5 text-sm">Export Metrics</a>
            )}
          </div>

          <slot />
        </div>
      </div>
      <div class="px-4 lg:px-8">
        <Footer fixed={false} offsetSidebar={false} />
      </div>
    </main>
  </body>
</html>
