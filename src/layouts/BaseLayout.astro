---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Sidebar from "../components/Sidebar.astro";
import Footer from "../components/Footer.astro";
import TopNotice from "../components/TopNotice.astro";

const { title = "Dashboard", subtitle = "Central Hub for Personal Customization", backHref } = Astro.props as { title?: string; subtitle?: string; backHref?: string };
const activePath = Astro.url.pathname;
---

