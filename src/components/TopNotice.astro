---
const { message = "MOON is open for collaboration â€” contribute on GitHub.", href = "https://github.com/elelabdev/moon" } = Astro.props as { message?: string; href?: string };
---
<div id="topNotice" class="alert alert-info alert-outline mb-4 rounded-lg" role="status">
  <div class="flex w-full items-center justify-between gap-3">
    <div class="flex items-center gap-2">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/></svg>
      <span class="text-sm text-base-content/70">{message} <a href={href} target="_blank" rel="noreferrer" class="link">GitHub</a></span>
    </div>
    <button id="noticeClose" class="btn btn-xs">Dismiss</button>
  </div>
  <script is:inline>
    const key = 'notice:dismissed';
    const dismissed = localStorage.getItem(key) === '1';
    const el = document.getElementById('topNotice');
    const btn = document.getElementById('noticeClose');
    if (dismissed && el) el.style.display = 'none';
    btn?.addEventListener('click', () => { localStorage.setItem(key, '1'); if (el) el.style.display = 'none'; });
  </script>
</div>
