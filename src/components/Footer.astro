const base = "border-t border-base-200 bg-base-100/90 backdrop-blur py-3 text-sm text-base-content/70";
const pos = fixed ? "fixed bottom-0 z-40" : "";
const span = fixed ? (offsetSidebar ? "app-footer left-[var(--sidebar-w)] right-0" : "inset-x-0") : "";
const classes = `${pos} ${span} ${base}`;
